{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "mocha": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
        "mochawesome-report/",
        "node_modules/"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/explicit-module-boundary-types": [
            "off"
        ],
        "@typescript-eslint/no-explicit-any": [
            "error"
        ],
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "trailingComma": "all",
                "singleQuote": false,
                "printWidth": 155,
                "tabWidth": 4,
                "endOfLine": "auto"
            }
        ]
    }
}
