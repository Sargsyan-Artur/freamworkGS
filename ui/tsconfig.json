{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "target": "es2017",
        "moduleResolution": "node",
        "pretty": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "./src",
        "strict": false,
        "paths": {
            "@config/*": [
                "./configs/*"
            ],
            "@constants/*": [
                "./support/constants/*"
            ],
            "@helpers/*": [
                "./support/helpers/*"
            ],
            "@http/*": [
                "./support/http/*"
            ],
            "@services/*": [
                "./utils/services/*"
            ],
            "@logger/*": [
                "./utils/logger/*"
            ],
            "@page_objects/*": [
                "./page_objects/*"
            ],
            "@support/*": [
                "./support/*"
            ],
        },
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "ESNext"
        ],
        "types": [
            "chai",
            "lodash",
            "node",
            "mssql",
            "chai-json-schema",
            "webdriverio/async",
            "webdriverio"
        ]
    },
    "exclude": [
        "../node_modules",
        "mochawesome-report"
    ],
    "include": [
        "src"
    ]
}
